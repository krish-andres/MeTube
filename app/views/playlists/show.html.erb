<header>
  <h2><%= @playlist.name %></h2>
</header>
<%= link_to 'My Playlists', playlists_path %> || <%= link_to 'Edit', edit_playlist_path(@playlist) %> || <%= link_to 'Delete', @playlist, method: :delete, data: { confirm: 'Are you sure?' } %>

<div>
  <ul>
    <% @videos.each do |video| %>
      <li>
        <strong><%= video.title %></strong><br /><br />
        <iframe width="560" height="315" src="//www.youtube.com/embed/<%= video.youtube_url %>" frameborder="0" allowfullscreen></iframe><br />
        <strong>Description: </strong><%= video.description %>
      </li>
    <% end %>
  </ul>
</div>

<div>
  <h3>Comments</h3>
  <%= link_to 'Add New Comment', new_playlist_comment_path(@playlist) %>
  <ul>
    <% @comments.each do |comment| %>
      <li>
        <strong><%= link_to comment.subject, playlist_comment_path(@playlist, comment) %></strong><br />
        <%= comment.body %><br />
        <strong>By: <%= comment.user.email %></strong><br />
        <%= time_ago_in_words(comment.created_at) %> ago
      </li>
    <% end %>
  </ul>
</div>

