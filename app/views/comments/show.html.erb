<%= link_to 'Back', @poly_var %>
<div>
  <br />
  <strong><%= @comment.subject %></strong><br />
  <%= @comment.body %><br />
  <strong>By: <%= @comment.user.email %></strong><br />
  <%= time_ago_in_words(@comment.created_at) %> ago
</div>

<div>
  <br />
  <% if current_user?(@comment.user) %>
    <% if params[:video_id] %>
      <%= link_to 'Edit', edit_video_comment_path(@poly_var, @comment) %>
      <%= link_to 'Delete', video_comment_path(@poly_var, @comment), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% elsif params[:playlist_id] %>
      <%= link_to 'Edit', edit_playlist_comment_path(@poly_var, @comment) %>
      <%= link_to 'Delete', playlist_comment_path(@poly_var, @comment), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  <% end %>
</div>
